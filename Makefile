CXX = g++
EXEC = ObjLoader
SOURCES = main.cpp ObjLoader.cpp
OBJECTS = main.o ObjLoader.
LDFLAGS = -lglut -lGL -lGLU -std=c++11

all :
	$(CXX) $(SOURCES) $(LDFLAGS) -o $(EXEC)

clean:
	rm -f $(EXEC) *.gdb *.o
